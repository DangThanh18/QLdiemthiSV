@model IEnumerable<de6.Models.DiemThi>

@{
    ViewBag.Title = "TKtheoTenMT";
}

<h2>Tìm kiếm theo tên môn thi</h2>

@{ Html.BeginForm("TKtheoTenMT", "DiemThis", FormMethod.Post);}
<label>Tên môn thi: </label>
@Html.TextBox("search", "")
<input type="submit" name="name" value="Tìm Kiếm" />
@{ Html.EndForm();}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaSV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenMT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayThi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SinhVien.TenSV)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenMT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayThi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SinhVien.TenSV)
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to list", "Index")
</p>
